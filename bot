        if tahmin == dogru_sayi:
            kazanÃ§ = bahis_miktarÄ± * 2
            coinler[ctx.author.id] += kazanÃ§
            await ctx.send(f"{ctx.author.mention}, tebrikler! Tahmin doÄŸru. {kazanÃ§} coin kazandÄ±nÄ±z. Toplam coin sayÄ±nÄ±z: {coinler[ctx.author.id]}")
