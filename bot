evcil_hayvanlar = {
    "kedi": {"fiyat": 200, "resim_url": "resim_url_kedi"},
    "kÃ¶pek": {"fiyat": 300, "resim_url": "resim_url_kÃ¶pek"},
    "kuÅŸ": {"fiyat": 150, "resim_url": "resim_url_kuÅŸ"}
}


coinler = {}

@bot.command()
async def pet_al(ctx, hayvan: str):
    hayvan = hayvan.lower()
    if hayvan not in evcil_hayvanlar:
        await ctx.send("BÃ¶yle bir evcil hayvan bulunmamaktadÄ±r.")
        return
    
    fiyat = evcil_hayvanlar[hayvan]["fiyat"]
    if coinler.get(ctx.author.id, 0) < fiyat:
        await ctx.send("Yeterli coininiz yok.")
        return
    
    coinler[ctx.author.id] -= fiyat
    # Burada kullanÄ±cÄ±nÄ±n envanterine evcil hayvanÄ± ekleyebilirsiniz.
    await ctx.send(f"{ctx.author.mention}, {hayvan} satÄ±n alÄ±ndÄ±!")

@bot.command()
async def coin_gÃ¶ster(ctx):
    coins = coinler.get(ctx.author.id, 0)
    await ctx.send(f"{ctx.author.mention}, Toplam coin miktarÄ±nÄ±z: {coins}")

