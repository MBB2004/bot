    embed.add_field(name="ID", value=kullanici.id, inline=True)
    embed.add_field(name="OluÅŸturulma Tarihi", value=kullanici.created_at.strftime("%Y-%m-%d %H:%M:%S"), inline=True)
    embed.add_field(name="Sunucuya KatÄ±lma Tarihi", value=kullanici.joined_at.strftime("%Y-%m-%d %H:%M:%S"), inline=True)
    embed.set_thumbnail(url=kullanici.avatar_url)
    await ctx.send(embed=embed)

