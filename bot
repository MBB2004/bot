@bot.event
async def on_member_join(member):
    
    role_id = 1231300356407820348 
    role = member.guild.get_role(role_id)
    if role:
        try:
            await member.add_roles(role)
            print(f'Rol baÅŸarÄ±yla {member} kullanÄ±cÄ±sÄ±na atandÄ±.')
