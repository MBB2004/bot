@bot.command()
async def oy_kullan(ctx, *, secenekler: str):
    """
    â„¹ï¸ Oy Kullanma Komutu
    Belirtilen seÃ§enekler arasÄ±ndan rastgele bir seÃ§enek seÃ§er.
    KullanÄ±m: !oy_kullan seÃ§enek1, seÃ§enek2, seÃ§enek3, ...
    """
    secenek_listesi = secenekler.split(",")
    secenek = random.choice(secenek_listesi)
    await ctx.send(f"SeÃ§ilen SeÃ§enek: {secenek.strip()}")
    if secenek in oylar:
        oylar[secenek] += 1
    else:
        oylar[secenek] = 1

@bot.command()
async def oysay(ctx):
    """
    â„¹ï¸ Oy Sayma Komutu
    KullanÄ±cÄ±larÄ±n verdiÄŸi oylarÄ± sayar.
    KullanÄ±m: ,oysay
    """
    if not oylar:
        await ctx.send("HenÃ¼z hiÃ§ oy verilmemiÅŸ.")
        return

    oy_sayisi = "\n".join([f"{secenek}: {oy}" for secenek, oy in oylar.items()])
    await ctx.send(f"Oylar:\n{oy_sayisi}")

