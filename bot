@bot.command()
async def adamasmaca(ctx):
    kelimeler = ['python', 'java', 'javascript', 'ruby', 'swift', 'kotlin', 'csharp', 'html', 'css', 'react']
    hak = 10
    kelime = random.choice(kelimeler)
    dogru_tahmin = ['_' for _ in range(len(kelime))]
    kullanilan_harfler = []

    await ctx.send("Adam asmaca oyununa hoÅŸ geldiniz!\nKelime: " + ' '.join(dogru_tahmin))

    while hak > 0:
        await ctx.send("Tahmin etmek iÃ§in bir harf yazÄ±n:")
        tahmin_mesaji = await bot.wait_for('message', check=lambda message: message.author == ctx.author)
        tahmin = tahmin_mesaji.content.lower()

        if tahmin in kullanilan_harfler:
            await ctx.send("Bu harfi zaten denediniz. LÃ¼tfen baÅŸka bir harf deneyin.")
            continue

        if len(tahmin) != 1 or not tahmin.isalpha():
            await ctx.send("GeÃ§ersiz giriÅŸ! LÃ¼tfen sadece bir harf girin.")
            continue

        kullanilan_harfler.append(tahmin)

        if tahmin in kelime:
            for i in range(len(kelime)):
                if kelime[i] == tahmin:
                    dogru_tahmin[i] = tahmin
            await ctx.send("DoÄŸru tahmin! Kelime: " + ' '.join(dogru_tahmin))
            if '_' not in dogru_tahmin:
                await ctx.send("Tebrikler! Kelimeyi doÄŸru tahmin ettiniz.")
                return
        else:
            hak -= 1
            await ctx.send(f"YanlÄ±ÅŸ tahmin! Kalan hak: {hak}\nKelime: " + ' '.join(dogru_tahmin))
    
    await ctx.send(f"Maalesef, hakkÄ±nÄ±z tÃ¼kendi. DoÄŸru kelime: {kelime}")

