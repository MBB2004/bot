    await ctx.send(f"{ctx.author.mention}, SatÄ±n alabileceÄŸiniz evcil hayvanlar:\n{hayvan_listesi}")

@bot.command()
async def evcil_hayvan_kuÅŸat(ctx, hayvan: str):
    hayvan = hayvan.lower()
    if hayvan not in evcil_hayvanlar:
        await ctx.send("BÃ¶yle bir evcil hayvan bulunmamaktadÄ±r.")
        return
    
    # Burada kullanÄ±cÄ±nÄ±n profil fotoÄŸrafÄ±nÄ± belirli bir evcil hayvanÄ±n resmi ile deÄŸiÅŸtirebilirsiniz.
    await ctx.send(f"{ctx.author.mention}, Profil fotoÄŸrafÄ±nÄ±z {hayvan} ile deÄŸiÅŸtirildi!")

